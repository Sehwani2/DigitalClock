#ifndef INC_WATCH_H_
#define INC_WATCH_H_

#include "main.h"

typedef struct _WatchTime{
	uint16_t years;
	uint8_t months;
	uint8_t days;
	uint8_t hours;
	uint8_t minutes;
	uint8_t second;
	uint16_t millisecond;
}WatchTime;

typedef enum _WatchMode{
	12HourMode,
	24HourMode,
}WatchMode;

typedef struct _Watch{
	WatchTime Time;
	bool isLeap;
	WatchMode WatchMode;
}Watch;

extern Watch watch;
bool isLeapYear(uint16_t year);
int getDaysInMonth(Watch* watch);
void updateWatchTime(void);

#endif /* INC_WATCH_H_ */
