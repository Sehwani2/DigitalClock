/* Private variables ---------------------------------------------------------*/

/* USER CODE BEGIN PV */
volatile Mode mode;
bool BuzLock;
/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_NVIC_Init(void);
/* USER CODE BEGIN PFP */

int _write(int file, char*p , int len)
{
 HAL_UART_Transmit(&huart3, p , len , 10);
 return len;
}
